{
  "manifest_version": 2,

  "name": "Qowala",
  "description": "This extension helps you to overcome your Web addiction",
  "version": "0.1.0",
  "applications": {
    "gecko": {
      "id": "qowala@qowala.org"
    }
  },
  "browser_action": {
    "browser_style": false,
    "default_icon": "assets/favicon.png",
    "default_popup": "lib/popup.html"
  },
  "icons": {
    "48": "assets/favicon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "storage"
  ],
  "background": {
    "scripts": ["lib/background-script.js"]
  },
  "options_ui": {
    "page": "lib/options.html",
    "open_in_tab": true
  }
}
